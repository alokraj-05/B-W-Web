{
  "manifest_version":3,
  "name":"B/W MODE",
  "version":"1.0.0",
  "background":{
    "service_worker":"dist/background.js"
  },
  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "js":["dist/content.js"],
      "run_at":"document_idle"
    }
  ],
  "action":{
    "default_popup":"popup.html",
    "default_title":"Changes your web pages into black and white."
  },
  "permissions":["storage","activeTab","sidePanel","tabs","contextMenus"],
  "icons":{
    "16":"icons/icon.png",
    "32":"icons/icon.png",
    "48":"icons/icon.png",
    "128":"icons/icon.png"
  },
  "side_panel":{
    "default_path":"components/sidePanel.html"
  }
}